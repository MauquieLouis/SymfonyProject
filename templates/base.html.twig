<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
        <link href="{{ asset('css/home.css') }}" rel="stylesheet" />
        {% endblock %}
        
        <div class = "bandeau">
        <ul>
        	<!-- BOUTONS COMMUN (CONNECTE OU NON) -->
        	<li><a href = "{{ path('home') }}" ><h1>LMI</h1></a></li>
        	{% if is_granted('ROLE_USER') %}
        		<!-- SI LA PERSONNE CONNECTE A LE ROLE USER : -->
        		<li class = "bouton1"><a href="{{ path('app_logout') }}">Logout</a>					</li>
        		<li class = "bouton1"><a href="{{ path('app_account') }}">Account</a>				</li>
        	    {% if is_granted('ROLE_ADMIN') %}
        		<!--  SI UN ADMIN S'EST CONNECTE -->
        		<li class = "bouton1"><a href="{{ path('home_admin')  }}">Control Panel</a>		</li>
        		{% endif %}
        	{% else %}
        	<!-- SI LA PERSONNE N'EST PAS CONNECTE -->
        	<li class = "bouton1"><a href="{{ path('app_login')   }}">Login</a>					</li>
        	{% endif %}
        </ul>
        </div>
    </head>

    <body >

    	<div class = "corps">
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
